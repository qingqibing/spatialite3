<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ems="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context=".MainActivity">

    <TextView
        android:id="@+id/communicate"
        android:text="--"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAppearance="?android:textAppearanceLarge"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/card_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/communicate"
        android:textSize="20sp"
        android:textAppearance="?android:textAppearanceLarge"
        android:gravity="center"
        android:text="--"/>

    <TextView
        android:id="@+id/title_maximum_speed"
        android:text="velocidad maxima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceLarge"
        android:textSize="30sp"
        android:layout_below="@id/card_info"
        android:layout_centerHorizontal="true"/>



    <LinearLayout
        android:id="@+id/container_velocity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_maximum_speed"
        android:orientation="horizontal"
        android:gravity="center|bottom">

        <TextView
            android:id="@+id/velocity"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceLarge"
            android:background="@drawable/rounded_button_green"
            android:padding="16dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:textSize="60sp"
            android:elevation="16dp"/>

        <TextView
            android:textAppearance="?android:textAppearanceMedium"
            android:text="km/h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/container_latlong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/container_velocity"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LATITUD"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceLarge"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/lbl_lat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-72.3652"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceLarge"
                android:textSize="18sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LONGITUD"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceLarge"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/lbl_long"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-72.3652"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceLarge"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>



    <Button
        android:id="@+id/run_point_in_polygon"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="descargar datos"

        />

</RelativeLayout>
